{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist/lib",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "src/app/*"
            ],
            "@lib/*": [
                "src/lib/*"
            ]
        }
    },
    "include": [
        "src/lib/**/*",
        "src/app/types/**/*",
        "src/app/services/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/app/components/**/*",
        "src/app/store/**/*",
        "**/*.spec.ts"
    ]
}